#!/bin/bash
# Flutter build command
# Usage: /flutter-build [platform] [flavor]

PLATFORM=${1:-"apk"}
FLAVOR=${2:-"develop"}

echo "üèóÔ∏è Building Flutter app for $PLATFORM ($FLAVOR flavor)..."

case $PLATFORM in
  "apk")
    make build_${FLAVOR}_apk
    ;;
  "aab")
    make build_${FLAVOR}_aab
    ;;
  "ipa")
    make build_${FLAVOR}_ipa
    ;;
  *)
    echo "‚ùå Unknown platform: $PLATFORM"
    echo "Available platforms: apk, aab, ipa"
    exit 1
    ;;
esac

echo "‚úÖ Build complete for $PLATFORM ($FLAVOR flavor)!"