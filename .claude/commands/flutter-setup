#!/bin/bash
# Flutter project setup command
# Usage: /flutter-setup [flavor]

FLAVOR=${1:-"develop"}

echo "🚀 Setting up Flutter project for $FLAVOR flavor..."

# Generate environment configurations
echo "📝 Generating environment configurations..."
make gen_env

# Full project sync
echo "🔄 Running full project sync..."
make sync

# Verify setup
echo "✅ Verifying setup..."
flutter doctor

echo "🎉 Flutter project setup complete for $FLAVOR flavor!"
echo "💡 You can now run: flutter run --flavor $FLAVOR"