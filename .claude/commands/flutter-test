#!/bin/bash
# Flutter testing command
# Usage: /flutter-test [type]

TEST_TYPE=${1:-"all"}

case $TEST_TYPE in
  "unit"|"ut")
    echo "🧪 Running unit tests..."
    make ut
    ;;
  "widget"|"wt")
    echo "🎨 Running widget tests..."
    make wt
    ;;
  "golden"|"ug")
    echo "✨ Updating golden test files..."
    make ug
    ;;
  "coverage"|"cov")
    echo "📊 Generating coverage report..."
    make cov
    ;;
  "all"|*)
    echo "🔍 Running all tests..."
    make te
    ;;
esac

echo "✅ Test execution complete!"